VERSION 0.6

IMPORT ../lib AS lib

FROM lib+platform

ARG stack

venv:
    RUN tar cvfz venv.tar.gz "$(~/bin/e poetry env info -p)"
    SAVE ARTIFACT venv.tar.gz AS LOCAL venv.tar.gz

synth:
    DO lib+CDKTF_SYNTH

init:
    DO lib+TERRAFORM_INIT --stack=${stack}

plan:
    FROM +init --stack=${stack}
    DO lib+TERRAFORM_PLAN

apply:
    FROM +init --stack=${stack}
    DO lib+TERRAFORM_APPLY
