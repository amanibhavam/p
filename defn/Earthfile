VERSION --parallel-load 0.6

IMPORT ../lib AS lib

FROM lib+platform

ARG stack

update:
    DO lib+PROJECT_UPDATE

synth:
    DO lib+CDKTF_SYNTH

init:
    DO lib+TERRAFORM_INIT --stack=${stack}

plan:
    FROM +init --stack=${stack}
    DO lib+TERRAFORM_PLAN --stack=${stack}

apply:
    FROM +init --stack=${stack}
    DO lib+TERRAFORM_APPLY --stack=${stack}
