VERSION --parallel-load --shell-out-anywhere --use-chmod --use-host-command 0.6
# --use-registry-for-with-docker

IMPORT github.com/katt-org/p/lib:master AS lib

FROM lib+platform

ARG stack

meh:
    FROM ubuntu
    COPY main.py .
    SAVE IMAGE --push registry.fly.io/docker:cache-meh

fit:
    FROM lib+fit --stack=${stack} --main=$(cat main.py | base64 -w 0)
